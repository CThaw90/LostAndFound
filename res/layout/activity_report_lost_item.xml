<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:layout_gravity="center_horizontal"
        android:text="@string/lost_item_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    
	<EditText 
	    android:layout_gravity="center_horizontal"
	    android:hint="@string/item_name_hint"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:id="@+id/lostItemName"
	    android:layout_margin="10dp"
	    android:padding="10dp"/>
	
	<EditText
	    android:id="@+id/lostLocation"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:hint="@string/location_lost_hint"
	    android:layout_gravity="center_horizontal"
	    android:layout_margin="10dp"
	    android:padding="10dp"/>
	
	<EditText
	    android:id="@+id/lostDescription"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:inputType="text|textMultiLine"
	    android:hint="@string/description_hint"
	    android:layout_gravity="center_horizontal"
	    android:layout_margin="10dp"
	    android:padding="10dp"/>
	
	<Button
	    android:id="@+id/lostReportButton"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/report_button"
	    android:layout_gravity="center_horizontal"
	    android:layout_margin="10dp"
	    android:padding="10dp"/>
</LinearLayout>